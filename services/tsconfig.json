{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "commonjs",
    // "moduleResolution": "nodeNext",
    "outDir": "dist",
    "allowImportingTsExtensions": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/__tests__",
    "src/__mocks__"
    // "prisma/**/*.ts"
  ]
}
